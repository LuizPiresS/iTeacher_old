{
  "compilerOptions": {
    "target": "ES2019",
    "module": "CommonJS",
    "lib": ["ES6"],
    "allowJs": true,
    "sourceMap": true,
    "removeComments": true,
    "resolveJsonModule": true,
    // "strict": true,
    "esModuleInterop": true,
    "outDir": "build/",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node"
  }
}
